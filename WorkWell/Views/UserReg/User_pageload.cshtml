@model WorkWell.Models.UserInsert
@{
    ViewBag.Title = "User_pageload";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>User Registration</h2>
<div>
    @using (Html.BeginForm("User_Insert", "UserReg", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div>
            <label>Name:</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.name)
            @Html.ValidationMessageFor(m => m.name)
        </div>
        <div>
            <label>Age:</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.age)
            @Html.ValidationMessageFor(m => m.age)
        </div>
        <div>
            <label>Address:</label>
        </div>
        <div>
            @Html.TextAreaFor(m => m.add)
            @Html.ValidationMessageFor(m => m.add)
        </div>
        <div>
            <label>Phone:</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.phone)
            @Html.ValidationMessageFor(m => m.phone)
        </div>
        <div>
            <label>Email:</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.email)
            @Html.ValidationMessageFor(m => m.email)
        </div>
        <div>
            <label>Experience in Years:</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.exp)
            @Html.ValidationMessageFor(m => m.exp)
        </div>
        <div>
            <label>Skills:</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.skills)
            @Html.ValidationMessageFor(m => m.skills)
        </div>
        <div>
            <label>Resume:</label>
        </div>
        <div>
            <label for="resumeFile">Upload Resume</label>
            <input type="file" name="resumeFile" />
            @*@Html.TextBoxFor(m=>m.resume ,new { type = "file" }) <br/>*@


        </div>
        <div>
            <label>Date of Birth:</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.dob)
            @Html.ValidationMessageFor(m => m.dob)
        </div>
        <div>
            <label>Photo:</label>
        </div>
        <div>
            <label for="photoFile">Upload Profile Picture</label>
            <input type="file" name="photoFile" />
            @*@Html.TextBox("file","",new { type = "file" })*@
        </div>
        <div>
            <label>Username</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.username)
            @Html.ValidationMessageFor(m => m.username)
        </div>
        <div>
            <label>Password</label>
        </div>
        <div>
            @Html.PasswordFor(m => m.pass)

        </div>
        <div>
            <label> Confirm Password</label>
        </div>
        <div>
            @Html.PasswordFor(m => m.cpass)
            @Html.ValidationMessageFor(m => m.cpass)
        </div>

        <div>
            <input type="submit" value="Insert" />
            @Html.DisplayFor(m => m.Usermsg)
        </div>

    }
</div>

